<!doctype html>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <title>Catálogo Geek — Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">

  <style>
    body {
      background: #0b0d10;
      color: #e8eaed;
    }

    .navbar,
    .offcanvas {
      background: #14181f;
    }

    .card {
      background: #171a21;
      border: 1px solid #232833;
      height: 100%;
    }

    .badge-type {
      letter-spacing: .3px;
    }

    .cover {
      width: 100%;
      aspect-ratio: 3/4;
      object-fit: cover;
      background: #0b0d10;
    }

    .search-hero {
      background: linear-gradient(180deg, #10141b 0%, #0b0d10 100%);
      border-bottom: 1px solid #232833;
    }

    .form-control,
    .form-select,
    .form-button {
      background: #0f131a;
      color: #e8eaed;
      border-color: #232833;
    }

    .form-button {
      background: #0758d2;
    }

    .form-control::placeholder {
      color: #9aa4af;
    }

    .page-link {
      background: #0f131a;
      color: #e8eaed;
      border-color: #232833;
    }

    .page-item.active .page-link {
      background: #375a7f;
      border-color: #375a7f;
    }

    a,
    a:hover {
      color: #9ad0ff;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold" href="#">Controle de Tarefas Pessoais</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#menu">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="offcanvas offcanvas-end text-bg-dark" id="menu">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">Menu</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link active" href="#">Início</a></li>
            <li class="nav-item"><a class="nav-link" href="/login">Entrar</a></li>
            <li class="nav-item"><a class="nav-link" href="/login">Cadastrar</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

 <section class="py-5 search-hero">
    <div class="container">
      <div class="row g-3 align-items-end">
        <div class="col-12 col-lg-6">
          <h1 class="fw-bold mb-2">Insira sua tarefa</h1>
        </div>
      </div>
    </div>
  </section>

  <footer class="py-4 border-top border-secondary" style="border-color:#232833!important;">
    <div class="container text-center text-secondary small">
      © <span id="year"></span> Controle de Tarefas Pessoais
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>